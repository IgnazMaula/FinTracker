@page "/BankAccountDetail/{Id:guid}"
@inherits BasePage
@inject IJSRuntime JS

<PageHeader Title="BankAccount" Icon="user-plus">
    <ButtonLink Label="Back" Url="BankAccounts" class="btn btn-sm btn-outline-primary" Icon="users" />
</PageHeader>

<Container>
    <Row>
        <Column>
            <Card>
                <CardHeader>BankAccount Detail</CardHeader>
                <CardBody>
                    <Row>
                        <Column class="col-md-6">
                            <InfoForm Label="Name" Value="@BankAccount.Name" />
                        </Column>
                        <Column class="col-md-6">
                            <InfoForm Label="Bank Name" Value="@BankAccount.BankName" />
                        </Column>
                    </Row>
                    <Row>
                        <Column class="col-sm-6">
                            <InfoForm Label="Account No" Value="@BankAccount.AccountNo" />
                        </Column>
                        <Column class="col-sm-6">
                            <InfoForm Label="Currency" Value="@BankAccount.Currency" />
                        </Column>
                    </Row>
                    <Row>
                        <InfoForm Label="CurrentBalance" Value="@BankAccount.CurrentBalance.ToString("N2")" />
                    </Row>
                </CardBody>
            </Card>
        </Column>
    </Row>
</Container>