<ApexChart TItem="MonthlyTransactionModel" Title="Monthly Income and Expense">
    <ApexPointSeries TItem="MonthlyTransactionModel"
                     Items="BankMonthlyTransaction"
                     Name="Income"
                     XValue="@(e => e.Period)"
                     YValue="@(e => e.TotalCredit)"
                     SeriesType="SeriesType.Bar"
                     Color="#0161F2" />

    <ApexPointSeries TItem="MonthlyTransactionModel"
                     Items="BankMonthlyTransaction"
                     Name="Expense"
                     XValue="@(e => e.Period)"
                     YValue="@(e => e.TotalDebit)"
                     SeriesType="SeriesType.Bar"
                     Color="#E81500" />
</ApexChart>

@code {
    [Parameter] public List<MonthlyTransactionModel>? BankMonthlyTransaction { get; set; }


    protected override void OnInitialized()

    {

    }
}