@inject IJSRuntime JS

<div class="col-xl-4 mb-4">
    <div class="card lift h-100 position-relative">
        <div class="card-body d-flex justify-content-center flex-column">
            <div class="d-flex align-items-center justify-content-between">
                <div class="me-3 w-100">
                    <div class="d-flex align-items-center">
                        <i class="feather-xl m-1 text-@Color" data-feather="@Icon"></i>
                        <h1 class="text-xl fw-600 ms-2">
                            @if (IsHidden)
                            {
                                @MaskValue(Quantity)
                            }
                            else
                            {
                                @Quantity
                            }
                        </h1>
                    </div>

                    <div class="d-flex align-items-center mt-1">
                        <h5 class="fw-600 mb-0">@Label</h5>
                        <button type="button" class="btn btn-link p-0 ms-2" @onclick="ToggleVisibility">
                            <i class="@EyeIconClass text-@Color"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Quantity { get; set; }
    [Parameter] public string? Color { get; set; } = "primary";
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Link { get; set; }

    private bool IsHidden = true;

    private string EyeIconClass => IsHidden ? "fa fa-eye-slash" : "fa fa-eye";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("feather.replace");
        }
    }

    private void ToggleVisibility()
    {
        IsHidden = !IsHidden;
    }

    private string MaskValue(string? value)
    {
        if (string.IsNullOrWhiteSpace(value))
            return "***";

        // Mask all characters with asterisks
        return new string('*', value.Length);
    }
}
