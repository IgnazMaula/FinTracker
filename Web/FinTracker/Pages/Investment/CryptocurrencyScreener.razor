@inject IJSRuntime JS

<div style="overflow-x: auto; width: 100%;">
    <div id="tradingview-crypto-widget-container" style="min-width: 1200px; height: 550px;"></div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadCryptoScreener");
        }
    }
}
